<MyGrid>
    name:name
    email:email

    GridLayout: 
        cols:1
        size: root.width-200, root.height-200
        pos:100,100

        GridLayout:
            cols:2    
            Label:
                text: "Name:"
                
            TextInput:
                multiline:False
                id:name
            
            Label:
                text: "Email:"
                
            TextInput:
                multiline:False
                id:email
        
        Button:
            text:"Submit"
            on_press:root.btn()

